 #include <stdio.h>
 #include <stdlib.h>
 
 void potencia(float X, float N){
	float pot = 1 ;
	for (int i = 0; i < N; i++)
		pot *= X;
	printf ("%.2f ^ %.2f = %.2f\n\n", X, N, pot);
	}

	int main() {
		float	X, N;
		
		while (1){
			printf ("\t===== CALCULANDO POTÊNCIA =====\n");
			printf ("Digite um número : \n ->");
			scanf (" %f", &X);
			printf ("Digite a potêcia : \n ->");
			scanf (" %f", &N);
			potencia(X,N);
		}
		
		return 0;
    }
