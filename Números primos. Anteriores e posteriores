/**
 * @file  primos.c
 * @author  @mvmedrados
 * @date  2025-11-06
 * @brief
 * Escreva um programa que lê um número N, e então imprima o primeiro número primo imediatamente anterior 
 * e o primeiro primo imediatamente posterior à N.
 **/

 #include <stdio.h>
 #include <stdlib.h>
 #include <string.h>
 #include <time.h>


        int main() {
			int	n;
			
			//LENDO N 
			printf("Digite o valor de N:\n");
			scanf (" %d", &n);
			
			// PRIMEIRO PRIMO ANTERIOR
			printf ("\n\nO primeiro primo ANTERIOR é :");
			int ant = n - 1;
			while (ant >= 2){
				int flag = 0;
				for (int i = 2; i * i <= ant; i++){
					if (ant % i == 0){
						flag++;
						break;
					}
				}	
				if (!flag) break;
				ant--;
            }
            printf (" <%d>", ant);
            
			
			// PRIMEIRO PRIMO POSTERIOR 
			printf ("\n\nO primeiro primo POSTERIOR é :");
			int post = n + 1;
			while (1){
				int flag = 0;
				for (int i = 2; i * i <= post ; i++){
					if (post % i == 0){
						flag ++;
						break;
					}
				}
				if (!flag) break;
				post ++;
			}
			printf(" <%d>", post);

        return 0;
        }
